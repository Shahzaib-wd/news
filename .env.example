# Global Insights Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=global_insights
DB_USER=your_database_user
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# Site Configuration
SITE_URL=https://yourdomain.com
SITE_NAME=Global Insights
SITE_TAGLINE=Your Source for World News
ADMIN_EMAIL=admin@yourdomain.com

# Security
SESSION_NAME=gi_session
CSRF_TOKEN_NAME=gi_csrf_token

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Pagination
ARTICLES_PER_PAGE=12
COMMENTS_PER_PAGE=20

# Rate Limiting (requests per hour)
RATE_LIMIT_LIKES=10
RATE_LIMIT_COMMENTS=5

# Features
COMMENTS_AUTO_APPROVE=false
ENABLE_RECAPTCHA=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Timezone
TIMEZONE=UTC

# Development Mode (set to false in production)
DEBUG_MODE=false
